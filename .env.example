# Project Configuration
# ========================================
# SETUP WORKFLOW:
# 1. Copy this file to .env: cp .env.example .env
# 2. Fill in the configuration values below
# 3. Run: bun run init (this will auto-generate the OIDC values)
# ========================================

# Project name (used for domains and branding)
PROJECT_NAME="nuxtship"
APPLICATION_NAME="NuxtShip"
VERSION="development"

# Domain Configuration (defaults to localhost subdomains)
APP_DOMAIN="app.localhost"
AUTH_DOMAIN="auth.localhost"
PROXY_DOMAIN="proxy.localhost"

# Docker Configuration
DOCKER_NETWORK="nuxtship-dev"

# PostgreSQL Host Port
# Change this if port 5432 is already in use on your host
POSTGRES_HOST_PORT="5432"

# Application Database Configuration
APP_DB_NAME="nuxtship"
APP_DB_USER="nuxtship"
APP_DB_PASSWORD=""
APP_DB_ADMIN_PASSWORD=""

# Zitadel Configuration
# ZITADEL_MASTERKEY: EXACTLY 32 hex characters (openssl rand -hex 16)
ZITADEL_MASTERKEY=""
ZITADEL_DB_PASSWORD=""
ZITADEL_ADMIN_PASSWORD=""
ZITADEL_ADMIN_USERNAME="admin"
ZITADEL_ADMIN_EMAIL="admin@example.com"
ZITADEL_ADMIN_FIRSTNAME="Admin"
ZITADEL_ADMIN_LASTNAME="User"
ZITADEL_ADMIN_NICKNAME="admin"
ZITADEL_ADMIN_DISPLAYNAME="Admin User"
ZITADEL_ADMIN_FORCE_PASSWORD_CHANGE=false

# Zitadel SMTP Configuration (required for email notifications)
ZITADEL_SMTP_HOST=""
ZITADEL_SMTP_PORT="587"
ZITADEL_SMTP_USER=""
ZITADEL_SMTP_PASSWORD=""
ZITADEL_SMTP_TLS=true
ZITADEL_SMTP_FROM="auth@nuxtship.localhost"
ZITADEL_SMTP_FROMNAME="NuxtShip"
ZITADEL_SMTP_REPLYTO="no-reply@nuxtship.localhost"

# Nuxt UI Pro License (optional)
NUXT_UI_PRO_LICENSE=""

# OIDC Authentication Secrets
# NUXT_OIDC_AUTH_SESSION_SECRET and NUXT_OIDC_SESSION_SECRET: 64 hex characters (openssl rand -hex 32)
# NUXT_OIDC_TOKEN_KEY: EXACTLY 32 hex characters (openssl rand -hex 16)
NUXT_OIDC_AUTH_SESSION_SECRET=""
NUXT_OIDC_SESSION_SECRET=""
NUXT_OIDC_TOKEN_KEY=""

# Branding Colors (optional - defaults to stone/indigo theme)
BRAND_PRIMARY_COLOR="#615fff"
BRAND_BACKGROUND_COLOR="#f5f5f4"
BRAND_WARN_COLOR="#ff2056" #amber
BRAND_FONT_COLOR="#1c1917"
BRAND_PRIMARY_COLOR_DARK="#7c86ff"
BRAND_BACKGROUND_COLOR_DARK="#1c1917"
BRAND_WARN_COLOR_DARK="#ff2056" #amber
BRAND_FONT_COLOR_DARK="#f5f5f4"

# ========================================
# INFRASTRUCTURE VERSIONS - Only change if you need specific versions
# ========================================
# Default versions are tested and stable combinations
TRAEFIK_VERSION="v3.4.4"
ZITADEL_VERSION="v3.3.1"
POSTGRES_VERSION="17-alpine"
NODE_VERSION="20-alpine"

# ========================================
# AUTO-GENERATED - These will be set automatically by 'bun run init'
# ========================================

# OIDC Authentication Configuration (Zitadel Provider)
# DO NOT SET MANUALLY - Generated automatically by provisioning script
NUXT_OIDC_PROVIDERS_ZITADEL_CLIENT_ID=""
NUXT_OIDC_PROVIDERS_ZITADEL_BASE_URL=""
NUXT_OIDC_PROVIDERS_ZITADEL_REDIRECT_URI=""
NUXT_OIDC_PROVIDERS_ZITADEL_LOGOUT_REDIRECT_URI=""